{
  "name": "nft-marketplace-solana",
  "version": "1.0.0",
  "description": "Advanced NFT Marketplace on Solana with comprehensive features",
  "main": "index.js",
  "scripts": {
    "build": "anchor build",
    "test": "anchor test --skip-local-validator",
    "test:unit": "anchor test --skip-local-validator --skip-deploy",
    "test:integration": "anchor test",
    "deploy:devnet": "./scripts/deploy.sh devnet",
    "deploy:testnet": "./scripts/deploy.sh testnet",
    "deploy:mainnet": "./scripts/deploy.sh mainnet-beta",
    "lint": "cargo clippy --all-targets --all-features -- -D warnings",
    "format": "cargo fmt --all",
    "clean": "anchor clean",
    "keys": "anchor keys list",
    "idl": "anchor idl parse -f target/idl/marketplace.json",
    "localnet": "solana-test-validator --reset",
    "logs": "solana logs",
    "frontend:dev": "cd app && npm run dev",
    "frontend:build": "cd app && npm run build",
    "frontend:start": "cd app && npm start",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "monitoring:start": "docker-compose up -d prometheus grafana",
    "backup": "./scripts/backup.sh",
    "security:scan": "./scripts/security-scan.sh"
  },
  "keywords": [
    "solana",
    "nft",
    "marketplace",
    "anchor",
    "blockchain",
    "defi",
    "web3",
    "metaplex"
  ],
  "author": "NFT Marketplace Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/your-org/nft-marketplace-solana"
  },
  "bugs": {
    "url": "https://github.com/your-org/nft-marketplace-solana/issues"
  },
  "homepage": "https://github.com/your-org/nft-marketplace-solana#readme",
  "devDependencies": {
    "@coral-xyz/anchor": "^0.29.0",
    "@solana/web3.js": "^1.87.6",
    "@types/bn.js": "^5.1.1",
    "@types/chai": "^4.3.0",
    "@types/mocha": "^9.1.0",
    "chai": "^4.3.6",
    "mocha": "^9.2.0",
    "ts-mocha": "^10.0.0",
    "typescript": "^4.9.5"
  },
  "dependencies": {
    "@metaplex-foundation/js": "^0.20.1",
    "@metaplex-foundation/mpl-token-metadata": "^3.2.1",
    "bn.js": "^5.2.1"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  }
}