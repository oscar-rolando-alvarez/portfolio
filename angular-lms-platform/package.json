  "license": "MIT",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build",
    "build:prod": "ng build --configuration production",
    "test": "ng test",
    "test:coverage": "ng test --code-coverage",
    "lint": "ng lint",
    "e2e": "ng e2e",
    "pwa:build": "ng build --configuration production && npm run sw-precache",
    "sw-precache": "sw-precache --config=sw-precache-config.js",
    "analyze": "ng build --stats-json && npx webpack-bundle-analyzer dist/angular-lms-platform/stats.json",
    "docker:build": "docker build -t angular-lms-platform .",
    "docker:run": "docker run -p 4200:80 angular-lms-platform"
  },
