# Environment Configuration
ENVIRONMENT=development
DEBUG=true
TESTING=false

# Database Configuration
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=financial_analysis
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/financial_analysis

# Database Pool Settings
DB_POOL_SIZE=5
DB_MAX_OVERFLOW=10
DB_POOL_PRE_PING=true
DB_POOL_RECYCLE=3600
DB_ECHO=false

# Redis Configuration
REDIS_URL=redis://localhost:6379/0
REDIS_ENCODING=utf-8
REDIS_DECODE_RESPONSES=true
REDIS_DEFAULT_TTL=3600
REDIS_MAX_CONNECTIONS=10

# Celery Configuration
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/1
CELERY_TASK_SERIALIZER=json
CELERY_RESULT_SERIALIZER=json
CELERY_ACCEPT_CONTENT=json
CELERY_TIMEZONE=UTC
CELERY_ENABLE_UTC=true

# Celery Worker Settings
CELERY_WORKER_PREFETCH_MULTIPLIER=1
CELERY_TASK_ACKS_LATE=true
CELERY_WORKER_MAX_TASKS_PER_CHILD=1000

# Celery Retry Settings
CELERY_TASK_RETRY_DELAY=60
CELERY_TASK_MAX_RETRIES=3
CELERY_RESULT_EXPIRES=3600

# Security Configuration
JWT_SECRET_KEY=your-super-secret-jwt-key-change-in-production
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080
ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# Machine Learning Configuration
ML_MODEL_STORAGE_PATH=./models
ML_DEFAULT_TRAIN_TEST_SPLIT=0.8
ML_DEFAULT_VALIDATION_SPLIT=0.2

# LSTM Model Defaults
ML_LSTM_SEQUENCE_LENGTH=60
ML_LSTM_UNITS=50,50
ML_LSTM_DROPOUT_RATE=0.2
ML_LSTM_LEARNING_RATE=0.001

# ML Training Resources
ML_MAX_EPOCHS=100
ML_BATCH_SIZE=32
ML_EARLY_STOPPING_PATIENCE=10

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s
LOG_FILE_ENABLED=true
LOG_FILE_PATH=./logs/app.log
LOG_FILE_MAX_SIZE=10485760
LOG_FILE_BACKUP_COUNT=5
LOG_JSON_FORMAT=false

# API Configuration
API_TITLE=Financial Analysis ML API
API_DESCRIPTION=A comprehensive financial analysis system with ML capabilities
API_VERSION=1.0.0
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=1

# API Documentation
API_DOCS_URL=/docs
API_REDOC_URL=/redoc
API_OPENAPI_URL=/openapi.json

# API Request Settings
API_MAX_REQUEST_SIZE=16777216
API_REQUEST_TIMEOUT=30

# External APIs
ALPHA_VANTAGE_API_KEY=your-alpha-vantage-api-key
ALPHA_VANTAGE_BASE_URL=https://www.alphavantage.co/query
YAHOO_FINANCE_ENABLED=true

# External API Settings
EXTERNAL_API_TIMEOUT=30
EXTERNAL_API_MAX_RETRIES=3
EXTERNAL_API_RETRY_DELAY=1