{
  "name": "react-collaboration-app",
  "version": "1.0.0",
  "description": "Real-time collaboration application similar to Figma/Miro",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "preview": "vite preview",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "server": "tsx server/index.ts",
    "docker:build": "docker build -t react-collaboration-app .",
    "docker:run": "docker run -p 3000:3000 -p 3001:3001 react-collaboration-app"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "fabric": "^5.3.0",
    "socket.io-client": "^4.7.2",
    "simple-peer": "^9.11.1",
    "zustand": "^4.4.1",
    "react-dnd": "^16.0.1",
    "react-dnd-html5-backend": "^16.0.1",
    "jspdf": "^2.5.1",
    "html2canvas": "^1.4.1",
    "react-hotkeys-hook": "^4.4.1",
    "immer": "^10.0.2",
    "uuid": "^9.0.0",
    "lodash": "^4.17.21",
    "react-use": "^17.4.0",
    "@radix-ui/react-dialog": "^1.0.4",
    "@radix-ui/react-dropdown-menu": "^2.0.5",
    "@radix-ui/react-slider": "^1.1.2",
    "@radix-ui/react-switch": "^1.0.3",
    "@radix-ui/react-tooltip": "^1.0.6",
    "lucide-react": "^0.263.1",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.0.0",
    "tailwind-merge": "^1.14.0"
  },
  "devDependencies": {
    "@types/react": "^18.2.15",
    "@types/react-dom": "^18.2.7",
    "@types/fabric": "^5.3.3",
    "@types/uuid": "^9.0.2",
    "@types/lodash": "^4.14.195",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "@vitejs/plugin-react": "^4.0.3",
    "autoprefixer": "^10.4.14",
    "eslint": "^8.45.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.3",
    "postcss": "^8.4.27",
    "tailwindcss": "^3.3.3",
    "typescript": "^5.0.2",
    "vite": "^4.4.5",
    "vitest": "^0.34.1",
    "@vitest/ui": "^0.34.1",
    "@vitest/coverage-v8": "^0.34.1",
    "socket.io": "^4.7.2",
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "@types/express": "^4.17.17",
    "@types/cors": "^2.8.13",
    "tsx": "^3.12.7",
    "@types/node": "^20.4.5"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  }
}