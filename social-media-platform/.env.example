# Database
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/socialconnect"

# JWT & Authentication
JWT_SECRET="your-super-secret-jwt-key-change-in-production"
AUTH_ORIGIN="http://localhost:3000"

# Redis (for caching and sessions)
REDIS_URL="redis://localhost:6379"

# File Upload & Media Storage
CLOUDINARY_CLOUD_NAME="your-cloudinary-cloud-name"
CLOUDINARY_API_KEY="your-cloudinary-api-key"
CLOUDINARY_API_SECRET="your-cloudinary-api-secret"
CLOUDINARY_BASE_URL="https://res.cloudinary.com/your-cloudinary-cloud-name"

# Firebase (for push notifications)
FIREBASE_PROJECT_ID="your-firebase-project-id"
FIREBASE_PRIVATE_KEY="your-firebase-private-key"
FIREBASE_CLIENT_EMAIL="your-firebase-client-email"
FIREBASE_API_KEY="your-firebase-api-key"
FIREBASE_AUTH_DOMAIN="your-project.firebaseapp.com"
FIREBASE_STORAGE_BUCKET="your-project.appspot.com"
FIREBASE_MESSAGING_SENDER_ID="your-messaging-sender-id"
FIREBASE_APP_ID="your-firebase-app-id"

# VAPID Keys for Web Push Notifications
VAPID_PUBLIC_KEY="your-vapid-public-key"
VAPID_PRIVATE_KEY="your-vapid-private-key"

# Email Service (for notifications and password reset)
SMTP_HOST="smtp.gmail.com"
SMTP_PORT="587"
SMTP_USER="your-email@gmail.com"
SMTP_PASS="your-app-password"

# OAuth Providers
GOOGLE_CLIENT_ID="your-google-client-id"
GOOGLE_CLIENT_SECRET="your-google-client-secret"
GITHUB_CLIENT_ID="your-github-client-id"
GITHUB_CLIENT_SECRET="your-github-client-secret"

# Content Moderation
PERSPECTIVE_API_KEY="your-google-perspective-api-key"

# Analytics
GOOGLE_ANALYTICS_ID="G-XXXXXXXXXX"

# App Configuration
APP_URL="http://localhost:3000"
APP_NAME="SocialConnect"
NODE_ENV="development"

# API Rate Limiting
RATE_LIMIT_WINDOW_MS="900000"  # 15 minutes
RATE_LIMIT_MAX_REQUESTS="100"

# File Upload Limits
MAX_FILE_SIZE="10485760"  # 10MB in bytes
MAX_FILES_PER_POST="10"

# Feature Flags
ENABLE_STORIES="true"
ENABLE_MESSAGING="true"
ENABLE_NOTIFICATIONS="true"
ENABLE_ANALYTICS="true"
ENABLE_CONTENT_MODERATION="true"