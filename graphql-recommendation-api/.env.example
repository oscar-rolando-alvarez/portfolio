# Environment Configuration for GraphQL Recommendation API

# Application Settings
APP_NAME="GraphQL Recommendation API"
APP_VERSION="1.0.0"
DEBUG=false
SERVICE_HOST=0.0.0.0
SERVICE_PORT=8000

# Database Configuration
DATABASE_URL=postgresql+asyncpg://user:password@localhost/graphql_recommendation
DATABASE_ECHO=false
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=30

# Redis Cluster Configuration
REDIS_NODES=redis://localhost:7000,redis://localhost:7001,redis://localhost:7002
REDIS_PASSWORD=
REDIS_DECODE_RESPONSES=true
REDIS_SKIP_COVERAGE_CHECK=true

# Vector Database Configuration
VECTOR_DB_PROVIDER=pinecone  # pinecone, weaviate, qdrant

# Pinecone Configuration
PINECONE_API_KEY=your-pinecone-api-key
PINECONE_ENVIRONMENT=your-pinecone-environment
PINECONE_INDEX_NAME=recommendations

# Weaviate Configuration
WEAVIATE_URL=http://localhost:8080
WEAVIATE_API_KEY=

# Qdrant Configuration
QDRANT_URL=http://localhost:6333
QDRANT_API_KEY=
QDRANT_COLLECTION_NAME=recommendations

# Authentication Configuration
SECRET_KEY=your-secret-key-change-in-production
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Rate Limiting Configuration
RATE_LIMIT_DEFAULT=1000/hour
RATE_LIMIT_AUTHENTICATED=5000/hour
RATE_LIMIT_PREMIUM=10000/hour

# Monitoring Configuration
ENABLE_PROMETHEUS=true
ENABLE_TRACING=true
JAEGER_ENDPOINT=http://localhost:14268/api/traces
LOG_LEVEL=INFO

# Recommendation Engine Configuration
DEFAULT_NUM_RECOMMENDATIONS=10
MAX_NUM_RECOMMENDATIONS=100
MF_FACTORS=100
MF_ITERATIONS=50
CONTENT_SIMILARITY_THRESHOLD=0.7
COLLABORATIVE_MIN_INTERACTIONS=5

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,http://localhost:8080